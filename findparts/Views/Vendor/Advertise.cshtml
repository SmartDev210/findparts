@using Findparts.Models.Vendor
@using Findparts.Core
@using DAL
@model Findparts.Models.Vendor.VendorAdvertiseViewModel

@{
    Layout = "~/Views/Vendor/Shared/_VendorLayout.cshtml";
    ViewBag.Title = "Advertise";
    ViewBag.ActiveTab = VendorActiveTab.AdvertiseTab;
}
<style>
    .tooltip {
        white-space: pre-line;
    }
</style>

<div class="row" style="margin-top: 16px;">
    <div class="col-lg-6 col-md-6">

        <p style="font-size: 16px;">History</p>
        <table class="table table-striped">
            <tr>
                <th>Type</th>
                <th>Quantity</th>
                <th>Amount</th>
                <th>Purchased At</th>
                <th>Invoice</th>
            </tr>
            @foreach (var item in Model.VendorPurchases)
            {
                <tr>
                    <td>@((PurchaseType)item.PurchaseType)</td>
                    <td>@item.Quantity.ToString("N0")</td>
                    <td>@((item.Amount / 100).ToString("C2"))</td>
                    <td>@item.PurchasedAt</td>
                    <td><a href="@Url.Action("DownloadInvoice", new { chargeId = item.Id })" target="_blank">Download</a></td>
                </tr>

            }
        </table>
    </div>
</div>
<div style="margin-top: 32px; width: max-content">
    <p style="font-size: 16px;">Advertise Asset / Service / Brand</p>
    <hr />
