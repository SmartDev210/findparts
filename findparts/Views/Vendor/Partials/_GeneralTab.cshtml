@model Findparts.Models.Vendor.VendorGeneralTabViewModel

@using (Html.BeginForm("General", "Vendor", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.VendorId)
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Vendor Name</label>
                <span class="form-control" readonly>@Model.VendorName</span>                
            </div>
            <div class="form-group">
                <label>Country</label>
                <span class="form-control" readonly>@Model.Country</span>                
            </div>
            <div class="form-group">
                <label for="WebsiteUrl">Website URL</label>
                @Html.TextBoxFor(m => m.WebsiteUrl, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.WebsiteUrl)
                
            </div>
            <div class="form-group">                
                <label for="DefaultCurrency">Default Currency</label>
                @Html.DropDownListFor(m => m.DefaultCurrency, new List<SelectListItem>()
                   {
                        new SelectListItem() {  Text = "$ USD", Value = "USD" },
                        new SelectListItem() {  Text="€ EUR", Value="EUR" },
                        new SelectListItem() {  Text="£ GBP", Value="GBP" },

                   }, new { @class="form-control" })               
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="Update"/>                
            </div>
        </div>
    </div>

}
